#include<iostream>
#define ll long long int
using namespace std;
int main()
{
      ll n,h;
      cin>>n>>h;
      ll arr[n];
      for(int i=0;i<n;i++)
      cin>>arr[i];
      ll count=0;
      for(int i=0;i<n;i++)
      if(arr[i]>h)
      count=count+2;
      else
      count=count+1;
      cout<<count<<endl;
      return(0);
}
