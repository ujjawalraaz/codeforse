#include<iostream>
#define ll long long int
using namespace std;
int main()
{
      ll n,k;
      cin>>n>>k;
      ll res;
      if(n%2==0)
      {
            if(k<=n/2)
            res=1+(k-1)*2;
            else
            res=2+(k-1-(n/2))*2;
      }
      else
      {
            if(k<=((n/2)+1))
            res=1+(k-1)*2;
            else
            res=2+(k-1-((n/2)+1))*2;
      }
      cout<<res<<endl;
      return(0);
}
