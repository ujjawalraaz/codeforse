#include<iostream>
#define ll long long int
using namespace std;
int main()
{
          string str,str1;
          cin>>str>>str1;
          ll n=str.size();
          ll n1=str1.size();
          if(n!=n1)
          cout<<"NO"<<endl;
          else
          {
             ll k=0;
             for(int i=0;i<n;i++)
             if(str[i]!=str1[n-1-i])
             {
                       k=1;
                       break;
             }
             if(k==0)
             cout<<"YES"<<endl;
             else
             cout<<"NO"<<endl;
          }
          return(0);
}
