#include<iostream>
#define ll long long int
using namespace std;
int main()
{
      ll n;
      cin>>n;
      string arr[n];
      for(int i=0;i<n;i++)
      cin>>arr[i];
      ll count=0;
      for(int i=1;i<n;i++)
      if(arr[i-1][1]==arr[i][0])
      count++;
      cout<<count+1<<endl;
      return(0);
}
