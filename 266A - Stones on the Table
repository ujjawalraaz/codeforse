#include<iostream>
#define ll long long int
using namespace std;
int main()
{
      ll n;
      cin>>n;
      string str;
      cin>>str;
      ll count=0;
      for(int i=1;i<str.size();i++)
      {
            if(str[i]==str[i-1])
            {
                  count++;
            }
      }
      cout<<count<<endl;
      return(0);
}
